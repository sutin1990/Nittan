                                    <table id="Detail" class="tableDetail">
                                        <tr class="trDetailHead">
                                            <td class="tdOperationNo"></td>
                                            <td class="tdProcess">PROCESS</td>
                                            <td class="tdMC showBorder">M/C</td>
                                            <td class="tdOut showBorder">OUT<br />(pcs)</td>
