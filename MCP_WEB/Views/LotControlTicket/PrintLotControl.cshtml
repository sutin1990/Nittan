                                                            }

                                                            @*@if (item.m_BPMasterVM.BPName.ToUpper().Contains("honda".ToUpper()))
                                                            {


                                                            }*@
                                                        </div>
                                                        
                                                        @*<div style="border: 1px solid; left:20px; width:20%;">

        </div>*@
                                                        <div class="block3">
                                                            <div class="col40">&nbsp;</div>
                                                            <div class="headPcsPerLot" style="width:54%;">@string.Format("{0:N0}",item.WeeklyPlanVM.QtyOrder) pcs./lot</div>
                                                        </div>
                                                    </div>
                                                </div>

