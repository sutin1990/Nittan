                                                    <div class="col30">
                                                        <b>Part No. </b>
                                                    </div>
                                                    <div class="hPartNo">
                                                        <text>@item.m_resourceVM.ItemCode</text>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col30">
                                                        <b>Part Name </b>
                                                    </div>
                                                    <div class="hPartName">
                                                        @item.m_resourceVM.Model
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col30">
                                                        <b>Raw Material</b>
                                                    </div>
                                                    <div class="hRawMaterial">

                                                        @{string[] split = item.WeeklyPlanVM.BarCode.Split("-").Select(s => s.Trim()).ToArray();


                                                        }
                                                        @if (split.Count() == 1)
                                                        {
                                                            @item.model1
                                                            @:&nbsp;,
                                                            @item.model2
                                                        }
                                                        else
                                                        {
                                                            switch (item.WeeklyPlanVM.BarCode.Substring(item.WeeklyPlanVM.BarCode.Length - 1))
                                                            {
                                                                case "1":@item.model1 break;
                                                                case "2":@item.model2 break;
