@model IEnumerable<MCP_WEB.Models.m_Jig>
@{
    ViewData["Title"] = "Jig Master";
}
<h3>Jig Master</h3>
<a asp-action="Create" class="btn btn-default">+ Add</a>

<form asp-action="Index" method="get">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>
                    @*@Html.DisplayNameFor(model => model.JigNo)*@
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["JigNoSortParm"]">
                        @Html.DisplayNameFor(model => model.JigNo)
                    </a>
                    @ViewBag.JigNoSortType
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Column)*@
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["ColumnSortParm"]">
                        @Html.DisplayNameFor(model => model.Column)
                    </a>
                    @ViewBag.ColumnType
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Row)*@
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["RowSortParm"]">
                        @Html.DisplayNameFor(model => model.Row)
                    </a>
                    @ViewBag.RowType
                </th>
            </tr>
            @* Filter Row ======================================================== *@
            <tr>
                <th>
                    <input type="submit" value="Filter" class="btn btn-default" />
                    <a asp-action="Index" class="btn btn-default">Clear</a>
                </th>
                <th>
                    <input type="text" name="JigNoFilter" value="@ViewData["JigNoFilter"]" />
                </th>
                <th>
                    <input type="text" name="ColumnFilter" value="@ViewData["ColumnFilter"]" />
                </th>
                <th>
                    <input type="text" name="RowFilter" value="@ViewData["RowFilter"]" />
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.JigID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.JigID">Delete</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JigNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Column)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Row)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</form>

<a asp-action="ExportExcel" class="btn btn-default">Export to Excel</a>
