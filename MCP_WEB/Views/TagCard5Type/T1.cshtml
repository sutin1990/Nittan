<body class="A6">

    &nbsp;&nbsp;&nbsp;
    <div class="stayVisible">
        <button class="btnPrint" onclick="printContent('print-content')">Print</button>
    </div>
    <div id="print-content">

        @foreach (var item in Model)
        {
            <section class="sheet padding-5mm">
                <div class="page">
                    <div class="wrapper">

                        <div class="box1">
                            <div class="row">
                                <div class="PartDesc">
                                    <text>Part Description Tag</text>
                                </div>
                                <div class="col15">
                                    @if (@item.QR != null)
                                    {
                                        <qrcode alt="@item.QR" size="43" content="@item.QR" />
                                    }
                                </div>
                                <div>
                                    <b style="padding-left:12px;">@item.QR</b>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col20">
                                    <b>Part No. </b>
                                </div>
                                <div class="PartNo">
                                    &nbsp;
                                    <b>@item.PartNo</b>
                                </div>
                                <div class="col10">
                                    <b>Date.</b>
                                </div>
                                <div class="Date" style="width:25%;">
                                    &nbsp;<b>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</b>
                                </div>
                            </div>
                            <div class="row">
                                <div style="float:left; width:25%;">
                                    <b>Part Name.</b>
                                </div>
                                <div class="PartName">
                                    &nbsp;
                                    <b>@item.PartName</b>
                                </div>
                            </div>

                        </div>


                        <div class="box2">
                            <img class="Logo_Tag1" src="~/images/Logo_Tag1.png" />
                        </div>


                        <div class="box3">
                            <div class="row">
                                <div style="float:left; width:17%;">
                                    <b>Quantity.</b>
                                </div>
                                @{ var classQuantity = "width:66%;";}
                                @if (item.Quantity == null) { classQuantity = "width:66%;" /*"width:25%;"*/; }
                                <div class="Qty" style="@classQuantity">
                                    &nbsp;
                                    <b>@item.Quantity PCS.</b>                                    
                                </div>

                                @*<div class="col10">
                                    <b>Customer</b>
                                </div>
                                @{ var classCustomer = "";}
                                @if (item.Customer == null) { classCustomer = "width:25%;"; }
                                <div class="Customer" style="@classCustomer">
                                    &nbsp;
                                    <text>@item.Customer</text>
                                </div>

                                <div class="col10">
                                    <b>Location</b>
                                </div>
                                @{ var classLocation = "";}
                                @if (item.Location == null) { classLocation = "width:15%;"; }
                                <div class="Location" style="@classLocation">
                                    &nbsp;
                                    <text>@item.Location</text>
                                </div>*@
                            </div>

                            <div class="row">
                                <div style="float:left; width:15%;">
                                    <b>Weight.</b>
                                </div>
                                @{ var classWeight = "width:68%;";}
                                @if (item.Weight == null) { classWeight = "width:68%;" /*"width:35%;"*/; }
                                <div class="Weight" style="@classWeight">
                                    &nbsp;
                                    <b>@item.Weight Kg/Pc</b>
                                </div>

                                @*<div class="col10">
                                    <b>TagColor</b>
                                </div>
                                @{ var classTagColor = "";}
                                @if (item.TagColor == null) { classTagColor = "width:15%;"; }
                                <div class="TagColor" style="@classTagColor">
                                    &nbsp;
                                    <text>@item.TagColor</text>
                                </div>

                                <div class="col10">
                                    <b>BoxColor</b>
                                </div>
                                @{ var classBoxColor = "";}
                                @if (item.BoxColor == null) { classBoxColor = "width:15%;"; }
                                <div class="BoxColor" style="@classBoxColor">
                                    &nbsp;
                                    <text>@item.BoxColor</text>
                                </div>*@
                            </div>
                        </div>

                        <div id="background" style="margin-top:40px;">
                            <p id="bg-text">@item.Model</p>
                        </div>

                        <div class="box4">
                            <div class="row">
                                <div class="col25">
                                    <text>Order No.</text>
                                </div>
                                <div class="OrderNo">
                                    &nbsp;
                                    <text>@item.OrderNo</text>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col25">
                                    <text>Order Qty.</text>
                                </div>
                                <div class="OrderQty">
                                    &nbsp;
                                    @{var OrderQty = "";
                                        if (item.OrderQty == 0 || item.OrderQty==null) { OrderQty = ""; } else { OrderQty = item.OrderQty.ToString(); }
                                    }
                                    <text>@OrderQty</text>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col30">
                                    <text>Packing Type.</text>
                                </div>
                                <div class="PackType">
                                    &nbsp;
                                    <text>@item.PackType</text>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col25">
                                    <text>Total Pack.</text>
                                </div>
                                <div class="TotalPack">
                                    &nbsp;
                                    @{var TotalPack = "";
                                        if (item.TotalPack == 0 || item.TotalPack == null) { TotalPack = ""; } else { TotalPack = item.TotalPack.ToString(); }
                                    }
                                    <text>@TotalPack</text>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col40">
                                    <text>This Pack of Total.</text>
                                </div>
                                <div class="ThisPack">
                                    &nbsp;
                                    <text>@item.ThisPackofTotal</text>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col40">
                                    <text>Inspection Code.</text>
                                </div>
                                <div class="InspectCode">
                                    &nbsp;
                                    <text>@item.InspectionCode</text>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col40">
                                    <text>Inspection By.</text>
                                </div>
                                <div class="InspectBy">
                                    &nbsp;
                                    <text>@item.InspectionBy</text>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col30">
                                    <text>Checked By.</text>
                                </div>
                                <div class="CheckedBy">
                                    &nbsp;
                                    <text>@item.CheckBy</text>
                                </div>
                            </div>
                            @*<div class="row">
                                    <div class="col20">
                                        <text>Lot No.</text>
                                    </div>
                                    <div class="LotNo">
                                        &nbsp;
                                        <text>@item.LotNoShow</text>
                                    </div>
                                </div>*@
                        </div>


                        <div class="box5" style="height:195px;">
                            @*<b style="font-size: 16px;">Part Picture Model @item.Model</b>
                            &nbsp;
                            <br />
                            <text>(WITH IMPORTANCE DIMENSION)</text>*@
                            <div><img class="Images" style="height:100%;" src="~/uploads/img/@item.Images" alt="@item.Images" /></div>
                        </div>


                        <div class="box6">
                            <div class="row">
                                <div class="col10">
                                    <text>Serial Lot.</text>
                                </div>
                                <div class="LotNo">
                                    &nbsp;
                                    <text>@item.LotNoShow</text>
                                    
                                </div>
                               <div style="margin-bottom:15px; float:left; width:50%; text-align:left;"><text>ต้นฉบับลูกค้า</text></div> <div  style="margin-bottom:15px; float:left; width: 50%; text-align:right"><text>@ViewBag.m_BPMaster.BPAddress6</text></div>
                            </div>

                        </div>


                    </div>
                </div>
            </section>

        }

    </div>
</body>
