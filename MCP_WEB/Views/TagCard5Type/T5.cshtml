@model IEnumerable<MCP_WEB.Models.VW_MFC_T5_AAT>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>T5</title>
    <link href="~/css/paperB.css" rel="stylesheet" />
    <script>
        function printContent(el) {
            var restorepage = document.body.innerHTML;
            var printcontent = document.getElementById(el).innerHTML;
            document.body.innerHTML = printcontent;
            window.print();
            document.body.innerHTML = restorepage;
        }
    </script>
    <style type="text/css">
        .stayVisible {
            position: fixed;
            top: 1em;
            left: 1em;
            width: 8.5em;
            right: auto;
        }

        .page {
            position: relative;
            clear: both;
            width: 120mm;
            height: 86mm;
            margin-left: auto;
            margin-right: auto;
            padding: 0;
            font-family: Calibri;
            /*border: 1px solid black;*/
        }

        b {
            font-size: 14px;
        }

        text {
            font-size: 14px;
        }
        /* Layout */
        * {
            box-sizing: border-box;
        }

        .wrapper > div {
            /*border-radius: 5px;*/
            /*background-color: rgb(207,232,220);*/
            /*padding: 1em;*/
        }

        .wrapper {
            display: grid;
            grid-template-columns: 48mm 36mm 36mm;
            grid-template-rows: 19mm 22mm 19mm 19mm 9mm;
            /*grid-gap: 1px;*/
            clear: both;
            width: 100%;
            margin-top: 0;
        }

        .box1 {
            grid-column: 1 / 3;
            grid-row: 1;
            /*padding-left: 5px;*/
            border: 1px solid black;
            z-index: 2;
        }

        .box2 {
            grid-column: 3;
            grid-row: 1;
            /*padding-left: 5px;*/
            border: 1px solid black;
            z-index: 2;
        }

        .box3 {
            grid-column: 1;
            grid-row: 2;
            /*padding-left: 5px;*/
            border: 1px solid black;
            z-index: 2;
        }

        .box4 {
            grid-column: 2;
            grid-row: 2;
            /*padding-left: 5px;*/
            border: 1px solid black;
            z-index: 2;
        }

        .box5 {
            grid-column: 3;
            grid-row: 2;
            /*padding-left: 5px;*/
            border: 1px solid black;
            z-index: 2;
        }

        .box6 {
            grid-column: 1;
            grid-row: 3;
            /*padding-left: 5px;*/
            border: 1px solid black;
            z-index: 2;
        }

        .box7 {
            grid-column: 2;
            grid-row: 3;
            /*padding-left: 5px;*/
            border: 1px solid black;
            z-index: 2;
        }

        .box8 {
            grid-column: 3;
            grid-row: 3;
            /*padding-left: 5px;*/
            border: 1px solid black;
            z-index: 2;
        }

        .box9 {
            grid-column: 1 / 4;
            grid-row: 4;
            /*padding-left: 5px;*/
            border: 1px solid black;
            z-index: 2;
        }

        /* */
        .row {
            clear: both;
            width: 100%;
            height: 20px;
            margin-top: 0;
            /*border: 1px solid red;*/
        }

        .col5 {
            float: left;
            width: 10%;
        }

        .col10 {
            float: left;
            width: 10%;
        }

        .col15 {
            float: left;
            width: 15%;
        }

        .col20 {
            float: left;
            width: 20%;
        }

        .col25 {
            float: left;
            width: 25%;
        }

        .col30 {
            float: left;
            width: 30%;
        }

        .col35 {
            float: left;
            width: 30%;
        }

        .col40 {
            float: left;
            width: 40%;
        }

        .col45 {
            float: left;
            width: 40%;
        }

        .col50 {
            float: left;
            width: 50%;
        }

        .col55 {
            float: left;
            width: 50%;
        }

        .col60 {
            float: left;
            width: 60%;
        }

        .col65 {
            float: left;
            width: 60%;
        }

        .col70 {
            float: left;
            width: 70%;
        }

        .col75 {
            float: left;
            width: 70%;
        }

        .col80 {
            float: left;
            width: 80%;
        }

        .col85 {
            float: left;
            width: 80%;
        }

        .col100 {
            float: left;
            width: 80%;
        }

        .PartsLabel {
            font-size: 16px;
            font-weight: bold;
        }

        .AutoAlliance {
            font-size: 16px;
            font-weight: bold;
        }

        .myCaption {
            width: 100%;
            height: 23px;
            padding-left: 5px;
            /*background-color: lightgray;*/
        }

        .Color {
            float: left;
            width: 60%;
            font-weight: bold;
            font-size: 18px;
        }

        .colQR {
            float: right;
            width: 40px;
            margin-right: 5px;
        }

        .colQRtext {
            float: right;
            width: 35px;
            margin-right: 1px;
        }
        /* Water Mark */
        #background {
            position: absolute;
            z-index: 1;
            background: transparent;
            display: block;
            min-height: 50%;
            min-width: 99%;
            color: yellow;
            margin-top: 50px;
            margin-left: 20px;
        }

        #bg-text {
            color: lightgray;
            font-size: 80px;
            font-weight: bold;
            /*transform: rotate(90deg);*/
            /*-webkit-transform: rotate(90deg);*/
        }
    </style>
</head>
<body class="A6">

    &nbsp;&nbsp;&nbsp;
    <div class="stayVisible">
        <button class="btnPrint" onclick="printContent('print-content')">Print</button>
    </div>
    <div id="print-content">
        @foreach (var item in Model)
        {
            <section class="sheet padding-5mm">
                <div class="page">

                    <div class="row">
                        <div class="col40">
                            <div class="PartsLabel">PARTS LABEL</div>
                        </div>
                        <div class="col60">
                            <div class="AutoAlliance">AutoAlliance(Thailand)co.,ltd.</div>
                        </div>
                        <div style=" margin-left:150px;" s>
                            <b style="font-size:45px;">INTAKE</b>
                        </div>
                    </div>

                    <div class="wrapper">

                        <div class="box1">
                            <div class="myCaption">
                                <text>Part Number + Colur</text>
                            </div>
                            <div class="col40">
                                &nbsp;&nbsp;                              
                                <b style="font-size:16px;">@item.PartNo</b>
                            </div>
                            
                            <div class="Color">
                                &nbsp;
                                @item.Color

                            </div>

                        </div>
                       
                        <div class="box2">
                            <div class="myCaption">
                                <text>Process</text>
                            </div>                           
                            <div style="text-align:center;"><b>000</b></div>
                            @*<b>@item.Process</b>*@
                        </div>

                        @*<div id="background">
                            <p id="bg-text">@item.Model</p>
                        </div>*@

                        <div class="box3" >
                            <div class="myCaption">
                                <text>Supplier</text>
                            </div>

                            @*<div style="padding-left:10px;"><b>@item.Suppiler</b></div>*@
                            <div style="padding-left:10px; text-align:center;"><b style=" font-size:20px;">KT 044</b></div>
                        </div>

                        <div class="box4">
                            <div class="myCaption">
                                <text>Quantity</text>
                            </div>                           
                            <div style="text-align:center;"><b style="font-size:16px; ">@string.Format("{0:#,0}",item.Quantity)</b></div>
                        </div>

                        <div class="box5">
                            <div class="myCaption">
                                <text>Delivery date</text>
                            </div>
                            @*<div style="text-align:center;">
                                <b style="font-size:16px; ">@Convert.ToDateTime(item.DeliveryDate).ToString("dd/MM/yyyy")</b>
                            </div>*@
                        </div>

                        <div class="box6">
                            <div class="myCaption">
                                <text>Receiving Loc</text>
                            </div>
                            <div style="text-align:center;">
                                <b style="font-size:16px; ">JE 1</b>
                            </div>
                                @*<b>@item.ReceivedLoc</b>*@
                        </div>

                            <div class="box7">
                                <div class="myCaption">
                                    <text>Storage Loc</text>
                                </div>
                                <div style="text-align:center;">
                                <b style="font-size:16px; ">G</b>
                                </div>
                                
                                @*<b>@item.StorageLoc</b>*@
                            </div>

                            <div class="box8">
                                <div class="myCaption">
                                    <text>Supply Loc</text>
                                </div>
                                <div style="text-align:center;">
                                    <b style="font-size:16px; ">-</b>
                                </div>
                                @*<b>@item.SupplyLoc</b>*@
                            </div>

                            <div class="box9">
                                <div class="myCaption">
                                    <text>Remark</text><br />                           
                                    <text>@item.LotNoShow = @item.Quantity</text>
                                </div>

                                &nbsp;&nbsp;
                                @*<b>@item.Remark</b>*@

                                <div class="colQRtext">
                                    <b style="font-size:12px;">@item.QR</b>
                                </div>

                                <div class="colQR">
                                    @if (@item.QR != null)
                                    {
                                        <qrcode alt="@item.QR" size="43" content="@item.QR" />
                                    }
                                </div>
                            </div>
                        
                        <div style="grid-column: 1 / 4; grid-row:5; margin-top:5px; "><div class="myCaption" style="width:100%; float: right;"><text style="float: right;">@ViewBag.m_BPMaster.BPAddress6</text></div></div>

                        </div>
                </div>
            </section>
        }

    </div>
</body>
</html>
