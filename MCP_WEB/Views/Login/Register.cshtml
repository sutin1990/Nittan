@model MCP_WEB.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login User</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->

    <link rel="stylesheet" href="~/AdminLTE/bower_components/bootstrap/dist/css/bootstrap.css">

    <link rel="stylesheet" href="~/css/LoginStyle.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body>
    <div class="login-wrap">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Register</label>
                <input id="tab-2" type="radio" name="tab" class="for-pwd" disabled><label for="tab-2" class="tab"></label>
                <div class="login-form">
                    <div class="sign-in-htm">

                        <hr />
                        <div class="group">
                            <label asp-for="UserName" class="label-left"></label>&nbsp;<span class="text-danger">*</span><span asp-validation-for="UserName" class="text-danger"></span>
                            <input asp-for="UserName" class="form-control_login" />
                        </div>
                        <div class="group">
                            <label asp-for="Password" class="label-left"></label>&nbsp;<span class="text-danger">*</span><span asp-validation-for="Password" class="text-danger"></span>
                            <input asp-for="Password" class="form-control_login" />

                        </div>
                        <div class="group">
                            <label asp-for="ConfirmPassword" class="label-left"></label>&nbsp;<span class="text-danger">*</span><span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <input asp-for="ConfirmPassword" class="form-control_login" />
                        </div>

                        <div class="group">
                            <label asp-for="FirstName" class="label-left"></label>&nbsp;<span class="text-danger">*</span><span asp-validation-for="FirstName" class="text-danger"></span>
                            <input asp-for="FirstName" class="form-control_login" />
                        </div>
                        <div class="group">
                            <label asp-for="LastName" class="label-left"></label>&nbsp;<span class="text-danger">*</span><span asp-validation-for="LastName" class="text-danger"></span>
                            <input asp-for="LastName" class="form-control_login" />
                        </div>
                        <div class="group">
                            <label asp-for="Email" class="label-left"></label>&nbsp;<span class="text-danger">*</span><span asp-validation-for="LastName" class="text-danger"></span>
                            <input asp-for="Email" class="form-control_login" />
                        </div>
                        <div class="group">
                            <button type="submit" class="button">Register</button>
                        </div>
                        <div class="group">
                            <a asp-action="Index" asp-controller="Login" asp-route-returnurl="@ViewData["ReturnUrl"]"><input type="button" class="button" value="Login" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>



    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
    <script src="~/AdminLTE/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/AdminLTE/bower_components/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/AdminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Morris.js charts -->
</body>
</html>
